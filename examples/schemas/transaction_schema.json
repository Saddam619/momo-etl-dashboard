{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transaction",
  "type": "object",
  "properties": {
    "transaction_id": { "type": "integer" },
    "external_txn_ref": { "type": ["string", "null"], "description": "Reference parsed from SMS" },
    "timestamp": { "type": "string", "format": "date-time" },
    "amount": { "type": "number" },
    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
    "sender_user_id": { "type": ["integer", "null"] },
    "receiver_user_id": { "type": ["integer", "null"] },
    "category_id": { "type": "integer" },
    "status": { "type": "string", "enum": ["PENDING", "SUCCESS", "FAILED", "UNKNOWN"] },
    "raw_message": { "type": "string" },
    "processed_at": { "type": ["string", "null"], "format": "date-time" },
    "metadata": { "type": ["object", "null"], "additionalProperties": true }
  },
  "required": ["transaction_id", "timestamp", "amount", "currency", "category_id", "raw_message"]
}
